<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="#b3d9ff"
        android:padding="5dp" >

    <TextView
        android:id="@+id/id_lokasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

        <TextView
            android:id="@+id/nama_lokasiti"
            android:icon="@drawable/ic_action_history"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="LOKASI : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nama_lokasi"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/nama_lokasiti"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/waktu_lokasiti"
            android:icon="@drawable/ic_action_history"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="JAM / TANGGAL : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/date_time"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/waktu_lokasiti"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tinggi_lokasiti"
            android:icon="@drawable/ic_action_history"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="KETINGGIAN (cm) : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ketinggian_air"
        android:icon="@drawable/ic_action_history"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/tinggi_lokasiti"
        android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>