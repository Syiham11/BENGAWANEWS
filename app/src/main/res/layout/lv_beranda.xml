<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_lokasib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/longitudeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/lattitudeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tingkat_awasb"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tingkat_waspadab"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tingkat_siagab"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--Baris 2 Kolom 2 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="#b3d9ff">
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nama_lokasib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JURUG"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/date_timeb"
            android:layout_width="match_parent"
            android:paddingRight="10dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2017-08-08 10:10:10"
             >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/status"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:text="WASPADA"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:textStyle="bold"
             />

        <TextView
            android:id="@+id/ketinggian_airb"
            android:gravity="right"
            android:text="30.00"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp" >
        </TextView>
    </TableRow>
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:gravity="right"
            android:text=" Meter"
            android:paddingRight="10dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            >
        </TextView>
    </TableRow>
        </LinearLayout>
</LinearLayout>