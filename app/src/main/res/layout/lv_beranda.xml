<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/id_lokasib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/longitudeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/lattitudeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tingkat_awasb"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tingkat_waspadab"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tingkat_siagab"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="#b3d9ff"
        android:padding="5dp" >

        <TextView
            android:id="@+id/lattitudeb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAMA LOKASI"/>

        <TextView
            android:id="@+id/nama_lokasib"
            android:icon="@drawable/ic_action_history"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lattitudeb21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TINGGI MUKA AIR (dalam CM)"/>
        <TextView
            android:id="@+id/ketinggian_airb"
            android:icon="@drawable/ic_action_history"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lattitudeb25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TANGGAL / JAM"/>
        <TextView
            android:id="@+id/date_timeb"
            android:icon="@drawable/ic_action_history"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/lattitudeb24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KONDISI"/>
        <TextView
            android:id="@+id/status"
            android:icon="@drawable/ic_action_history"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>