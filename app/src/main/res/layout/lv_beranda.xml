<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/id_lokasib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/longitudeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/lattitudeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tingkat_awasb"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tingkat_waspadab"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tingkat_siagab"
        android:icon="@drawable/ic_action_history"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <!--Baris 2 Kolom 2 -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="#b3d9ff"
        android:padding="5dp" >
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nama_lokasib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nama"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/date_timeb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_action_tanggal"
            android:textAllCaps="true"
            android:gravity="right"
            android:text="tgl"
            android:textSize="15dp" >
        </TextView>
    </TableRow>

    <!-- Baris 3 Kolom 3 -->

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView

            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:text="status"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp" />
    </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ketinggian_airb"
            android:gravity="right"
            android:text="tinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp" >
        </TextView>

</TableRow>
        <TextView
            android:id="@+id/ketinggian_airbbb"
            android:gravity="right"
            android:text=" CM"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp" >
        </TextView>
        </LinearLayout>
    </LinearLayout>