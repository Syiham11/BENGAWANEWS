<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apn404.ews.bengawanews.fragment.FragmentAkun">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
            <TextView
            android:id="@+id/akuni"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
            android:drawableLeft="@drawable/ic_action_akundaftar"
            android:layout_marginBottom="20dp"
                android:layout_alignParentLeft="true"
                android:text=" Akun Terdaftar" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left|center"
            android:text="agungeks@student.uns.ac.id"
            android:layout_marginBottom="20dp"
            android:textColor="#0066cc" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0066cc"
            android:text="@string/logout"
            android:layout_alignParentRight="true"
            android:textColor="@color/white" />

        </RelativeLayout>

        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:background="#bbb"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/ic_action_tanggal"
            android:gravity="left|center"
            android:text=" Tentang Aplikasi"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left|center"
            android:layout_marginBottom="20dp"
            android:text="Sistem Peringatan Dini Banjir Sungai Bengawan Solo"
            android:textColor="#0066cc" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left|center"
            android:layout_marginBottom="20dp"
            android:text="www.banjir.mitigasi.com/banjir"
            android:textColor="#0066cc" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left|center"
            android:text="Made in M3114006 D3 Teknik Infromatika UNS"
            android:textColor="#0066cc" />

    </LinearLayout>
    </ScrollView>
</FrameLayout>
